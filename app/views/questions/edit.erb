<% if @errors %>
  <h3><span>Something went wrong:</span></h3>
  <ul>
    <% @errors.each do |error| %>
      <li><p><%= error %></p></li>
    <% end %>
  </ul>
<% end %>

<h1>Revise your thoughts on this flapjack post ...</h1>

<form method="post" action="/questions/<%= @q.id %>">
  <input type="hidden" name="_method" value="put">
  <div>
    <input name="title" type="text" value="<%= @q.title %>">
  </div>
  <div>
    <textarea name="body"><%= @q.body %></textarea>
  </div>
  <input type="submit" value="Edit">
</form>

<form method="post" action="/questions/<%= @q.id %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
